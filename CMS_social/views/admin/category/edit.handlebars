<form action="/admin/category/edit/{{posts.id}}?_method=PUT" method="post" enctype="multipart/form-data">
    
    <div class="form-group">
        <label style="font-size: 35px;margin-top:10px;" for="name">Name :  </label><br>
        {{#if mreq}}

            <div class="alert alert-danger" style="width:800px;margin-top:10px;">
                {{mreq}}
            </div>

        {{/if}}
        <input required name="name" style="width:300px; height:40px; border-color:rgba(130,130,130,0.4); border-width:1px; border-radius:3px; padding-left:15px;" type="text" class="form-control" id="name" placeholder="Enter Name">
    </div>

<button class="btn btn-primary" style="width:300px;height:50px;font-family:'Poppins',sans-serif;font-weight:600;font-size:25px;">Edit</button>
