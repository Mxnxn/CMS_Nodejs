<h1>Create Category :</h1>



<form action="/admin/category/create" method="post" enctype="multipart/form-data">
    
    <div class="form-group">
        <label style="font-size: 25px;margin-top:50px;" for="name">Name :  </label><br>
        {{#if mreq}}

            <div class="alert alert-danger" style="width:800px;margin-top:10px;">
                {{mreq}}
            </div>

        {{/if}}
        <input name="name" style="width:300px; height:40px; border-color:rgba(130,130,130,0.4); border-width:1px; border-radius:3px; padding-left:15px;" type="text" class="form-control" id="name" placeholder="Enter Name">
    </div>

    <button class="btn btn-warning" style="width:300px;height:50px;font-family:'Poppins',sans-serif;font-weight:600;font-size:25px;">Create</button>

    <h1 style="margin-top:50px;">Catagories : </h1>

    {{#if success}}
        <div class="alert alert-danger" style="width:800px;margin-top:50px;">
        {{success}}
        </div>
    {{/if}}

    <table class="table table-bordered" style="width:800px;margin-top:20px;">

        <thead>
            <tr>
               <th style="text-align:center;">Id</th>
               <th style="text-align:center;">Name</th>
               <th style="text-align:center;">Date</th>
               <th style="text-align:center;">Edit</th>
               <th style="text-align:center;">Delete</th>
            </tr>
        </thead>
        {{#each posts}}
        <tbody>
            <tr>
                <td style="text-align:center;">{{id}}</td>
                <td style="text-align:center;">{{name}}</td>
                <td style="text-align:center;">26/02/2019</td>
                <td style="text-align:center;"><a href="edit/{{id}}" class="btn btn-success">Edit</a></td>
                <td style="text-align:center;"><a href="delete/{{id}}"class="btn btn-danger">Delete</a></td>
            </tr>
        </tbody>
        {{/each}}

</form>