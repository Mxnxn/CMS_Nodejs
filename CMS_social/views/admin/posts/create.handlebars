<h1>Posted Things : </h1>

    {{!-- {{> home/form-msg}} --}}

{{#if success}}
    <div class="alert alert-danger">
    {{success}}
    </div>
{{/if}}

{{#if success_edit}}
    <div class="alert alert-success">
    {{success_edit}}
    </div>
{{/if}}

<table class="table table-bordered">

    <thead>
        <tr>
            <th style="text-align:center;">Id</th>
            <th style="text-align:center;">Picture</th>
            <th style="text-align:center;">Title</th>
            <th style="text-align:center;">Category</th>
            <th style="text-align:center;">Status</th>
            <th style="text-align:center;">Allow Comments</th>
            <th style="text-align:center;">Description</th>
            <th style="text-align:center;">Update</th>
        </tr>
    </thead>
    <tbody>
        {{#each posts}}
        <tr>
            <td style="text-align:center;">{{id}}</td>
            <td style="text-align:center;"><img src="public/uploads/{{file}}"></td>
            <td style="text-align:center;">{{title}}</td>
            <td style="text-align:center;">{{category.name}}</td>            
            <td style="text-align:center;">{{status}}</td>
            <td style="text-align:center;">{{allow}}</td>
            <td style="text-align:center;">{{desc}}</td>
            <td style="text-align:center;"><a href="edits/{{id}}" class="btn btn-info">Edit</a><a href="delete/{{id}}" style="margin-left:15px;color:white;"  class="btn btn-danger">Delete</a></td>

        </tr>
        {{/each}}
    </tbody>

</table>
