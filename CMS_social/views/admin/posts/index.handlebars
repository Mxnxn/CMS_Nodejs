<h1>Create Post</h1>

{{#each errors}}

    <div class="alert alert-danger" style="width:300px">
        {{message}}
    </div>

{{/each}}

<form action="/admin/posts/posted" method="post" enctype="multipart/form-data">
    
    <div class="form-group">
        <label for="title">Title :  </label><br>
        <input name="title" style="width:300px; height:40px; border-color:rgba(130,130,130,0.4); border-width:1px; border-radius:3px; padding-left:15px;" type="text" class="form-control" id="title" placeholder="Enter Title">
    </div>

    <div class="form-group">
        <label for="file">File :</label><br>
        <input type="file" name="file" class="file-control">
    </div>
    <div>
        <label for="category">Category :  </label>
        <select name="category" name="category" id="category" style="width:300px; margin-bottom:20px;" class="form-control">
            {{#each category}}
            <option value="{{id}}">{{name}}</option>
            {{/each}}
        </select>
    </div>
    <div>
        <label for="status">Type :  </label>
        <select name="status" name="status" id="status" style="width:300px; margin-bottom:20px;" class="form-control">
            <option value="public">Public</option>
            <option value="private">Private</option>
            <option value="draft">Draft</option>
        </select>
    </div>
    <div class="custom-control custom-checkbox" style="margin-bottom:20px;">
        <input type="checkbox" name="allow" class="custom-control-input" id="allow">
        <label class="custom-control-label" for="allow">Allow Comments</label>
    </div>
    <div class="form-group">
        <label for="desc">Description :  </label><br>
        <textarea style="width:300px; height:100px; border-color:rgba(130,130,130,0.4); border-width:1px; border-radius:3px; padding-left:15px;
        padding-top:5px; text-align:justify" type="text" class="desc" name="desc" id="desc" placeholder="Enter Discription"></textarea>
    </div>
    <button class="btn btn-primary" type="submit" style="width:300px; height:40px;">Submit</button>
</form>

